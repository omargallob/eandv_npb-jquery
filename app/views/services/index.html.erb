<div id="left-side">
	<div id="title">
		<h5><%= @page.navlabel %></h5>
	</div>
	
	<div id="side-nav">
		<hr/>
		<ul class="submenu">
			<%= render :partial => "shared/services_sidenav", :object => @categories %>
		</ul>
		<hr />
		<div id="leftswfcontainer" style="float:left;height:196px">
			<%= render :partial =>"shared/keepdiscovering" %>
			<%= render :partial=>"shared/polaroid"%>
		</div>
		<%= link_to image_tag("system/buttons/sellyourproperty.jpg"),"/why/selling",:style => "margin-top:8px;" %>
		<hr />
		<%= render :partial =>"shared/leftside/chatlive" %>
		<%= render :partial =>"shared/leftside/sharethis" %>
		<%= render :partial =>"shared/leftside/marketreport" %>
		<%= render :partial => "shared/leftside/affiliate" %>


	</div>

	<div id="main" class="properties">
		<%= image_tag "static/services_main.jpg",:id=>"mainpic" %>
		<%= @page.body %>
		<div id="main_bottom" class="main_border other">	</div>
	</div>
	

</div>
<div id="right-column" class="<% if @page.name == "home" %>home<% end %>">
	<div id="searchbox" 	class="<% if @page.name != "home" %>advanced<% end %>">
		<div class="top"></div>
			<div><%= render :partial => "shared/advancedsearchbox" %></div>
		<div class='bottom'></div>
	</div>
		<%= render :partial => "shared/services_right_tool" %>
</div>

<% content_for :script do %>
<script type="text/javascript">
$(document).ready(function() {
  	 

	$("#main_bottom").appendTo($("#main"));
	set_nav_pointer("services");
});


</script>
<% end %>

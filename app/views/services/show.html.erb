<div id="left-side">
	<div id="title">
		<h5><%= @page.title %>  <% if @category.parent %> > <%= @category.parent.title %><% end %>  <%= @category.title%></h5>
	</div>
	
	<div id="side-nav">
		<hr/>
		<ul class="submenu">
			<%= render :partial => "shared/services_sidenav", :object => @categories %>
		</ul>
		<hr />
		<%= render :partial =>"shared/keepdiscovering" %>	
		<%= render :partial=>"shared/polaroid"%>
		<%= image_tag "system/buttons/sellyourproperty.jpg",:style => "margin-top:20px;" %>
		<hr />
		<div class="left_tool relocating">
			<div class="top"></div>
			<div class="header_w_image">
				<img src="/images/system/buttons/affiliate.jpg" width="50" height="35" alt="House">
				<h3 class="services"><span class="title"><a href="/contact?iframe=true&width=560&height=600" rel="prettyPhoto">Become an <br />affiliate</a></span></h3>
			</div>
			<div class="bottom"></div>
		</div>
	</div>

	<div id="main" class="properties">
		<h1 class="regular"><%= @category.title %> </h1>
		<%= image_tag @category.main.url(:large),:id=>"mainpic" %>
		<%= @category.description %>
		<div id="main_bottom" class="main_border other">	</div>
	</div>
	<% if @subcats.length > 0 %>	
	<div id="services">
		<div class="top"></div>
		<ul>
			<%= render :partial => "service_swf", :collection => @subcats %>
		</ul>
	
		<div class="bottom"></div>
	</div>
	<% end %>
</div>


<div id="right-column" class="<% if @page.name == "home" %>home<% end %>">
	<div id="searchbox" 	class="<% if @page.name != "home" %>advanced<% end %>">
		<div class="top"></div>
			<div><%= render :partial => "shared/advancedsearchbox" %></div>
		<div class='bottom'></div>
	</div>
	
		<%= render :partial => "shared/services_right_tool" %>

</div>

<% content_for :script do %>
<script type="text/javascript">
$(document).ready(function() {

	$('.droppies').combobox();
	aux = $("#main p:first").html();
	$("#main p:first").html("");
	$("#mainpic").appendTo("#main p:first");
	$("#main p:first").append(aux);
	$("#mainpic").show();

	$("#services ul li:first").css('margin-bottom',"15px");
	$("#main_bottom").appendTo($("#main"));
	set_nav_pointer("services");
});
</script>
<% end %>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
		<%= display_meta_tags %>	
    <%= stylesheet_link_tag "screen","envnpb_backend","ui.tabs.css","sexylightbox","orangebrownie","drop-down-menu","table_blue" %>
	<link href="/stylesheets/print.css" media="print" rel="stylesheet" type="text/css" />
	<!--[if lt IE 8]>
	      <link href="/stylesheets/ie.css" media="screen, projection" rel="stylesheet" type="text/css" />
	<![endif]-->
	<style type="text/css">

	  .clearfix:after {
	    content: ".";
	    display: block;
	    height: 0;
	    clear: both;
	    visibility: hidden;
	    }
#menu, #menu ul {
	list-style:none;
	padding:0;
	margin:0;
}
#menu li {
	float:left;
	position:relative;
	line-height: 4.5em;
	width: 150px;
}
#menu li ul {
	position:absolute;
	margin:0px;
	display:none;
}
#menu ul li ul {
	margin-top:-25px;
	margin-left:150px;
}
#menu a {
	display:block;
	border-right:1px solid #fff;
	background:transparent;
	color:#3B3B3B;
	text-decoration:none;
	padding:0 10px;
}
#menu a:hover {
	background-color:#E13939;
	color:#fff;
}
#menu ul {
	border:0px none
}

#menu ul a {
	border-right:none;
	border-right:1px solid #fff;
	border-bottom:1px solid #fff;
	border-left:1px solid #fff;
	background:#d4d4d4;
}

/* SHOW SUBMENU 1 */
#menu li:hover ul, #menu li.over ul {
	display:block;
}
#menu li:hover ul ul, #menu li.over ul ul {
	display:none;
}
/* SHOW SUBMENU 2 */
#menu ul li:hover ul, #menu ul li.over ul {
	display:block;
}

	</style>
	<%= javascript_include_merged "admin_packaged", "jquery.tablesorter.min" %>


<!--[if IE]>
<style type="text/css">
	#menu li {
		position:static;
	}


</style>
<![endif]--> 
	<%= yield :script %>
  </head>
  <body>
		<div id='pagewrapper'>
			<div id='header'>
				<div id="logo">
					<%# link_to (image_tag("system/logo.gif"), "/admin") %>
				</div>
				<%= render :partial => "shared/user_bar", :object => self %>
				<h1><%= I18n.locale %></h1>			    
		  	</div>
			<div id='navbar'>
				<ul>
					<%= render :partial => "shared/back_menu_new" %>
				</ul>
		  	</div>
		</div>
		<div id='content' class="clearfix">
			<% if flash[:notice] %>
		      <div id="notice"><p><%= flash[:notice] %></p></div>
		    <% end %>
      		<%= yield %>
		</div>
		<div id='footer'>
		
		</div>
  </body>
</html>

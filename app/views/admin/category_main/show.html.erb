<h2 class="title">Main photo (Only being used by top level categories) </h2>
<% if @category.category_main %>
<%= image_tag @category.category_main.photo(:large)  %>

<%= link_to image_tag ('system/buttons/delete.jpg',:height => "15px",:title => "delete"), admin_category_main_path(@category.category_main), :confirm => 'Are you sure?', :method => :delete %>
<% else %>
	<% form_for :category_main, :url=>{:action=>"create"},:html => { :multipart => true, :method => :post } do |f| %>
		<%= f.error_messages %>
	 	<p>
			 <%= f.label :title %><br />
			   <%= f.text_field :title  %>
		</p>

	 	<p>
			 <%= f.label :description %><br />
			   <%= f.text_area :description  %>
		</p>


	 	<p>
			 <%= f.label :photo %><br />
			   <%= f.file_field :photo  %>
		</p>


	 	<%= f.hidden_field :category_id, :value => @category.id %>

		<p>
		  <%= f.submit "Create" %>
		</p>
	<% end %>
<% end %>

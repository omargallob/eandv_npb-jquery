<%= f.error_messages %>

<div id="contentform">
 <p>
   <%= f.label :name %><br />
   <%= f.text_field :name %>
 </p>
 <p>
   <%= f.label :title %><br />
   <%= f.text_field :title %>
 </p>
<p>
	<%= f.collection_select :parent_id, Page.find(:all), :id, :title, :include_blank => true%>
</p>
<p>
	 <%= f.label :position %><br />
     <%= f.text_field :position, :size => "3" %>
</p>
<p>
	 <%= f.label :navlabel %><br />
     <%= f.text_field :navlabel  %>
</p>
 <p>
   <%= f.label :body %><br />
   <%= f.text_area :body %>
 </p>
<p>
	  <%= f.label :featured %><br/>
  	  <%= f.check_box(:featured)
	   %>
</p>
<p>
	  <%= f.label :thumb %><br/>
 	  <%= f.file_field(:thumb) %>
</p>
 <p>
	    <%= f.submit 'Update' %>
	  </p>
</div>
<div id="media">

<% if controller.action_name == "edit" %>
	<% if @page.name =="shop"%>
	
<p>
	<iframe src="<%= admin_page_main_path(@page) %>" width="850" height="700"></iframe>
</p>

	<% end %>


	<% if @page.parent %>
		<% if @page.parent.name == "about" %>
		<p>
			<iframe src="<%= admin_page_about_path(@page) %>" width="1200" height="700"></iframe>
		</p>
		<% end %>
	<% end %>
<% end %>
</div>

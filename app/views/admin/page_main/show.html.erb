<h2 class="title">Main photo (Only being used in the Shop page) </h2>
<% if @page.page_main %>
<%= image_tag @page.page_main.photo(:pagesize)  %>

<%= link_to image_tag ('system/buttons/delete.jpg',:height => "15px",:title => "delete"), admin_page_main_path(@page.page_main), :confirm => 'Are you sure?', :method => :delete %>
<% end %>
<% form_for :page_main, :url=>{:action=>"create"},:html => { :multipart => true, :method => :post } do |f| %>
  <%= f.error_messages %>
 	<p>
		 <%= f.label :title %><br />
	     <%= f.text_field :title  %>
	</p>

 	<p>
		 <%= f.label :description %><br />
	     <%= f.text_area :description  %>
	</p>


 	<p>
		 <%= f.label :photo %><br />
	     <%= f.file_field :photo  %>
	</p>


 	<%= f.hidden_field :page_id, :value => @page.id %>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>page

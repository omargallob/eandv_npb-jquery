<% if controller.action_name == "show" %>
<div class="left_tool shorter toolset hack" style="height:100%">
	<div class="top"></div>
	<h3><span class="title">Tools</span></h3>
	<ul>
		<li><%= image_tag "system/buttons/tools/Mortgage.jpg"%> <span>
			<a href="/mortgage/<%= @property.id%>?iframe=true&width=560&height=600" rel="prettyPhoto[tools]">Mortgage calculator</a></span></li>
		<li><%= image_tag "system/buttons/tools/Value.jpg"%> 
			<span>
			<% if @property.location.country_id == 9 %>
			<a href="/homevalue/<%= @property.location.id %>?iframe=true&width=560&height=640" rel="prettyPhoto[tools]">Home <br>Value</a>
			<% else %>
			<a href="/social?iframe=true&width=300&height=80" rel="prettyPhoto[tools]">		Home <br />Value</a>
			<% end %>
			</span> 
		</li>
		<li><%= image_tag "system/buttons/tools/Neighbourhood.jpg"%>
			<span>

			<% if @property.location.country_id == 9 %>
			<a href="/demographics/?iframe=true&width=560&height=600" rel="prettyPhoto[tools]">Know your neighbourhood</a>
			<% else %>
			<a href="/social?iframe=true&width=300&height=80" rel="prettyPhoto[tools]">		Know your neighbourhood</a>
			<% end %>
			</span> 
		</li>
		<li><%= image_tag "system/buttons/tools/Neighbourhood.jpg"%>
			<span>
				<%= link_to "Nearest<br> Schools","/social?iframe=true&width=300&height=80",:rel=>"prettyPhotos[tools]" ,:style=>"float:left" %>
			</span>
		</li>
	</ul>
	<div class="bottom"></div>
</div>
<hr />
<div class="left_tool relocating chat_box">

	<div class="header_w_image" >
	<h3 style="text-align:left;width:100%;margin:0px;"><%= image_tag "system/buttons/Chat.png" %> <span class="title"><a onclick="window.open('http://chatserver.comm100.com/ChatWindow.aspx?siteId=25828&planId=368&visitType=1&byHref=1','livechat','width=500,height=450');" href="#">
		Chat LIVE now </a></span>	</h3>
	</div>
</div>

<% end %>





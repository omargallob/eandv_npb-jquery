if ("<%= @order %>"=="DESC"){
  $("li.<%= @sort_by %> a").html("<%= escape_javascript(@sort_by.capitalize)%>");
  $("li.<%= @sort_by %> img").remove();
  $("li.<%= @sort_by %>").append("<%= escape_javascript(image_tag('system/buttons/Filters/Filter_Arrow_down.jpg')) %>");
}else{
  $("li.<%= @sort_by %> a").html("<%= escape_javascript(@sort_by.capitalize)%>");
  $("li.<%= @sort_by %> img").remove();
  $("li.<%= @sort_by %>").append("<%= escape_javascript(image_tag('system/buttons/Filters/Filter_Arrow.jpg')) %>");
}
$("li#order").text("<%= @sort_by %>");
if("<%= @sort_by %>"=="price"){
  $("li.date img").remove();
  $("li.date a").css("margin-left","13px");
  $("li.price a").css("margin-left","7px");
  if($("li.date").hasClass("active")){
    $("li.date").removeClass("active");
  }
  $("li#price_order").text("<%= @order%>");

}else{
  $("li.price img").remove();
  $("li.price a").css("margin-left","13px");
  $("li.date a").css("margin-left","7px");
  if($("li.price").hasClass("active")){
    $("li.price").removeClass("active");    
  }
  $("li#date_order").text("<%= @order%>");  
}

$('#properties_holder').html('<%= escape_javascript(render :partial => "shared/property", :collection => @properties) %>');

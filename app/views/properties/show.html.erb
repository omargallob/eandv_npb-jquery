<div id="left-side" class="properties">
	<%= render :partial => "gallery" %>

	<div id="side-nav" class="properties property">
		<%= render :partial => "shared/left_sidenav" %>
		<%= render :partial => "shared/tool_set" %>
	</div>

	<div id="main" class="property  <%= 'featured' if @property.featured %>">
		<div class="top">	</div>

		<h1  class="title">
		<% if @property.featured %>
		Featured	property
		<% else %>
		property
		<% end %>
		 </h1>
		<hr />
			<%= render :partial => "property", :object => @property %>
		<div class="bottom">	</div>

	</div>
</div>
<div id="right-column">
	<div id="searchbox" class="advanced">
		<div class="top"></div>
			<div><%= render :partial => "shared/advancedsearchbox" %></div>
		<div class='bottom'></div>
	</div>


	<%# render :partial => "shared/why" %>
	<%= render :partial => "shared/properties_right" %>
</div>



<?xml version="1.0" encoding="utf-8" ?>
<cu3er>
	<settings>
		
    	<prev_button>
			<defaults round_corners="5,5,5,5"/>
			<tweenOver tint="0xFFFFFF" scaleX="1.1" scaleY="1.1"/>
			<tweenOut tint="0x000000" />
		</prev_button>
		
    	<prev_symbol>
			<tweenOver tint="0x000000" />			
		</prev_symbol>
		
    	<next_button>
			<defaults round_corners="5,5,5,5"/>		
			<tweenOver tint="0xFFFFFF"  scaleX="1.1" scaleY="1.1"/>
			<tweenOut tint="0x000000" />
		</next_button>
		
    	<next_symbol>
			<tweenOver tint="0x000000" />
		</next_symbol>	
		<description>
			<defaults
	       	   round_corners="2000, 2000, 2000, 20000"       
		       heading_font="Times New Roman"
		       heading_text_size="22"
		       heading_text_color="0xFFFFFF"          
		       heading_text_margin="20, 20, 20,20"  
		       paragraph_font="Arial"
		       paragraph_text_size="13"
		       paragraph_text_color="0x000000"
		       paragraph_text_margin="10, 0, 0, 10"    
		   	 
	   		/>
		
		</description>
	</settings>    
	<slides>
        <slide>
		
            <url>images/slide_1.jpg</url>
        </slide>
		<!-- changing transition beetween first & second slide -->
        <transition num="3" slicing="vertical" direction="down"/>
        <slide>
       		<url>images/slide_2.jpg</url>
        </slide>		
		<!-- changing transition beetween second & third slide -->
        <transition num="3" slicing="horizontal" direction="right" />
		<slide>
            <url>images/slide_3.jpg</url>
        </slide>
        <!-- transitions properties defined in transitions template -->
	    <transition num="3" slicing="vertical" direction="down"/>
		<slide>
       		<url>images/slide_4.jpg</url>
        </slide>
		<transition num="3" slicing="vertical" direction="up" shader="flat" delay="0.05" z_multiplier="4" />
	</slides>
	
</cu3er>

